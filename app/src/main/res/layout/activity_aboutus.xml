<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.roger.dropus.aboutus"
    android:layout_width="match_parent"
    android:background="#666"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image"
        android:layout_width="250dp"
        android:layout_height="250dp"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="66dp"
        android:contentDescription="TODO"
        android:src="@drawable/dropus" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#cff"
        android:id="@+id/relativeLayout"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/image"
        android:layout_alignParentStart="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dropus"
            android:textSize="40sp"
            android:id="@+id/text1"
            android:textAlignment="center"
            android:textColor="#000"
            android:layout_marginTop="22dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#d65000"
            android:textSize="25sp"
            android:id="@+id/tex"
            android:text="The New Way Of Travel"
            android:layout_below="@+id/text1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="28dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="23sp"
            android:textColor="#000"
            android:text="Team-  VB The Productive"
            android:layout_marginTop="17dp"
            android:layout_below="@+id/tex"
            android:layout_centerHorizontal="true"
            android:id="@+id/textView24" />


    <TextView
        android:id="@+id/textView25"
        android:textSize="35sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:textColor="#d65500"
        android:text="Core Developers"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView24"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rajat"
        android:textSize="20sp"
        android:textColor="#000"
        android:text="Rajat Bishnoi"
        android:layout_centerHorizontal="true"
     android:layout_below="@+id/textView25" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dipesh"
            android:textSize="20sp"
            android:textColor="#000"
            android:text="Dipesh Saini "
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/rajat" />
    </RelativeLayout>
</RelativeLayout>
</ScrollView>